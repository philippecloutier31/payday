{
  "name": "cf-finder-payment-gateway",
  "version": "1.0.0",
  "description": "BlockCypher payment gateway for BTC and ETH automated payments",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/start.js",
    "dev": "node --watch src/start.js",
    "dev:test:workflow": "node scripts/test-workflow.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:blockcypher": "node test-blockcypher.js",
    "test:blockcypher:live": "node test-blockcypher.js --with-server",
    "test:gateway": "node test-gateway-flow.js"
  },
  "keywords": [
    "payment",
    "gateway",
    "blockcypher",
    "bitcoin",
    "ethereum",
    "crypto"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "bip32": "^5.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^7.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ecpair": "^3.0.0",
    "ethers": "^6.16.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "node-fetch": "^3.3.2",
    "tiny-secp256k1": "^2.2.4",
    "uuid": "^9.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "mjs"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ]
  }
}